<p style="color: green"><%= notice %></p>

<% content_for :title, "Documents" %>

<h1>Documents</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>File</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @documents.each do |document| %>
      <tr>
        <td><%= document.title %></td>
        <td><%= document.description %></td>
        <td>
          <% if document.file.present? %>
            <%= link_to "Download", document.file.url %>
          <% else %>
            No file
          <% end %>
        </td>
        <td><%= document.user.email %></td>
        <td><%= link_to "Show", document %></td>
        <td><%= link_to "Edit", edit_document_path(document) %></td>
        <td><%= link_to "Destroy", document, method: :delete, data: { confirm: "Are you sure?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "New document", new_document_path %>
